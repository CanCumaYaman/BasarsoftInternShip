        .map {
            height: 400px;
            width: 100%;
        }

        .layer-select {
            margin-top: 10px;
            border: 1px solid black;
            padding: 7px;
        }

        .popover-body {
            min-width: 276px;
        }
    </style>



</head>
<body>
    <div id="map" class="map"></div>
    
    <div style="display: none;">
        <div id="popup" title="Welcome to OpenLayers">
        </div>
    </div>
    <!--
    <select id="layer-select" class="layer-select">

