<body>
    <ul>
        <li>  <button class="btn btn-success mb-3" onclick="ActiveDoor();">Add Door</button></li>
        <li> <button class="btn btn-success mb-3" onclick="ActiveNeigh();">Add Neighborhood</button></li>
        <li> <button class="btn btn-success mb-3" onclick="ActiveInfo();">Get Information</button></li>
        <li>
            <select class="form-select" id="neigh_list" aria-label="Default select example" style="width: 250px; display: inline-block;background-color: #157347;color:white;">
                <option selected>Edit Neighborhood</option>
                <option>Edit Door</option>
            </select>
        </li>
        <li> <button class="btn btn-success mb-3" onclick="GetEditItem();">Edit</button></li>
        <li> <button class="btn btn-success mb-3" onclick="togglePanel();">Search Door</button></li>
    </ul>
  
   
    <div id="searchPanel" style="display:none;">
        <input type="text" id="myInput" class="form-control w-25 mb-1" onkeyup="filteredResult()" placeholder="Search">
        <table class="table table-striped table-bordered w-50 mb-5" id="doorInfo">
            <thead>
                <tr>
                    <th>Neighborhood Name</th>
                    <th>Door Number</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    <div id="map" class="map mb-4"></div>

